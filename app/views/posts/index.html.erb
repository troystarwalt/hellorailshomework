<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Title</th>
      <th>User</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td id="set_width"><%= post.content %></td>
      <td><%= post.title %></td>
      <td><%= post.user.username %></td>
      <% if post.user.avatar_file_name.nil? %>
      <td>No Image<% else %><%= image_tag post.user.avatar.url(:thumbnail) %></td>
      <% end %>
      <td><%= link_to 'Go to Post', post %></td>
      <% if @current_user %>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
